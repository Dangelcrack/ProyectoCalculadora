<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vbox" alignment="CENTER" prefHeight="347.0" prefWidth="729.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.dangelcrack.view.MainController">
    <children>
      <ImageView fitHeight="450.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../media/Logo.png" />
         </image>
      </ImageView>
        <TableView fx:id="tableView" editable="true">
            <columns>
                <TableColumn fx:id="imageViewTableColumn" prefWidth="100.0" text="Photo" />
                <TableColumn fx:id="columnName" prefWidth="100.0" text="Nombre" />
                <TableColumn fx:id="columnFirstType" prefWidth="100.0" text="Tipo1" />
            <TableColumn fx:id="columnSecondType" prefWidth="100.0" text="Tipo2" />
                <TableColumn fx:id="columnMoves" prefWidth="100.0" text="Movimientos" />
            </columns>
        </TableView>
        <Button mnemonicParsing="false" onAction="#agregaPokemon" style="-fx-font-family: 'Arial'; -fx-font-size: 15.0; -fx-font-style: italic; -fx-font-weight: bold; -fx-background-color: -fx-text-box-border, -fx-background; -fx-background-insets: 0, 0 0 1 0; -fx-background-radius: 0;" text="Agregar" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
