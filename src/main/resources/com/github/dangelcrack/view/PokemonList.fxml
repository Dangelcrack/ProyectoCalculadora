<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vbox" alignment="CENTER" prefHeight="347.0" prefWidth="729.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.dangelcrack.view.PokemonController">
    <children>
      <ImageView fitHeight="157.0" fitWidth="208.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../media/ModalImageUtils/Logo.png" />
         </image>
         <effect>
            <Glow />
         </effect>
      </ImageView>
        <TableView fx:id="tableView" editable="true" maxWidth="1000.0" minWidth="1000.0" prefWidth="1000.0" style="-fx-font-family: 'Arial'; -fx-font-size: 15.0; -fx-font-style: italic; -fx-font-weight: bold; -fx-background-color: transparent; -fx-background-insets: 0, 0 0 1 0; -fx-background-radius: 0;">
            <columns>
                <TableColumn fx:id="imageViewTableColumn" maxWidth="1000.0" prefWidth="100.0" resizable="false" style="-fx-background-color: transparent; -fx-background-border: transparent;" text="Photo" />
                <TableColumn fx:id="columnName" maxWidth="1000.0" prefWidth="100.0" resizable="false" text="Nombre" />
                <TableColumn fx:id="columnFirstType" maxWidth="1000.0" prefWidth="110.0" resizable="false" text="Tipo1" />
            <TableColumn fx:id="columnSecondType" maxWidth="1000.0" prefWidth="110.0" resizable="false" text="Tipo2" />
                <TableColumn fx:id="columnMoves" maxWidth="446.0" minWidth="392.0" prefWidth="392.0" resizable="false" text="Movimientos" />
            <TableColumn fx:id="pokemonHolds" maxWidth="315.0" minWidth="105.0" prefWidth="184.0" resizable="false" text="Objeto" />
            </columns>
        </TableView>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <children>
                <Button mnemonicParsing="false" onAction="#agregaPokemon" style="-fx-font-family: 'Arial'; -fx-font-size: 15.0; -fx-font-style: italic; -fx-font-weight: bold; -fx-background-color: -fx-text-box-border, -fx-background; -fx-background-insets: 0, 0 0 1 0; -fx-background-radius: 0;" text="Agregar">
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#borrarPokemon" style="-fx-font-family: 'Arial'; -fx-font-size: 15.0; -fx-font-style: italic; -fx-font-weight: bold; -fx-background-color: -fx-text-box-border, -fx-background; -fx-background-insets: 0, 0 0 1 0; -fx-background-radius: 0;" text="Borrar">
                    <HBox.margin>
                        <Insets left="100.0" />
                    </HBox.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#editarPokemon" style="-fx-font-family: 'Arial'; -fx-font-size: 15.0; -fx-font-style: italic; -fx-font-weight: bold; -fx-background-color: -fx-text-box-border, -fx-background; -fx-background-insets: 0, 0 0 1 0; -fx-background-radius: 0;" text="Editar">
                    <HBox.margin>
                        <Insets left="100.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
